<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/colorPrimary">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="24dp"
                  android:orientation="vertical"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent">

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/app_name"
                  android:fontFamily="cursive"
                  android:textColor="@color/colorBranco"
                  android:textSize="60dp"
                  android:gravity="center_horizontal"
                  android:textAlignment="center"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/edt_nota1"
                android:hint="@string/nota_1"
                android:gravity="center_horizontal"
                android:background="@color/fundohint"
                android:textSize="24dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="casual"
                android:padding="12dp"
                android:singleLine="false"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:inputType="number"
                android:ems="10"
                android:id="@+id/edt_nota2"
                android:gravity="center_horizontal"
                android:hint="@string/nota_2"
                android:layout_marginTop="24dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/fundohint"
                android:textSize="24dp"
                android:fontFamily="casual"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@+id/edt_nota1"/>

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:inputType="number"
                android:ems="10"
                android:gravity="center_horizontal"
                android:id="@+id/edt_faltas"
                android:hint="@string/faltas"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:background="@color/fundohint"
                android:textSize="24dp"
                android:fontFamily="casual"
                android:padding="12dp"
        />


        <Button
                android:text="@string/botao_calcular"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_calcular"
                android:background="@drawable/back_buttom"
                android:textSize="18dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textAlignment="gravity"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="sans-serif-black"
                tools:layout_editor_absoluteY="479dp"
        />
        <TextView
                android:id="@+id/txt_resultado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:textStyle="bold"
                android:textSize="24dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>