<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
android:background="@color/colorPrimary">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edt_nota1"
            tools:layout_editor_absoluteY="163dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="@string/nota_1"
            android:background="@color/fundohint"
            android:textSize="24dp"
            android:fontFamily="casual"
            android:padding="12dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edt_nota2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintStart_toEndOf="@+id/edt_nota1"
            android:hint="@string/nota_2"
            android:layout_marginTop="24dp"
            android:background="@color/fundohint"
            android:textSize="24dp"
            android:fontFamily="casual"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_nota1"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/num_faltas"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintStart_toEndOf="@+id/edt_nota2"
            android:hint="@string/faltas"
            android:layout_marginTop="24dp"
            android:background="@color/fundohint"
            android:textSize="24dp"
            android:fontFamily="casual"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_nota2"/>
    <Button
            android:text="@string/botao_calcular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_calcular"
            android:background="@color/fundoYellow"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="sans-serif-black"
            tools:layout_editor_absoluteY="479dp"
            tools:layout_editor_absoluteX="157dp"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/app_name"
              android:fontFamily="cursive"
              android:textColor="@color/colorBranco"
              android:textSize="60dp"
              android:layout_marginBottom="40dp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toTopOf="@+id/edt_nota1"/>

</androidx.constraintlayout.widget.ConstraintLayout>